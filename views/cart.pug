div(class="col col-md-4")
    div(class="card")
        a(href=`goods/${item['slug']}`)
            h3(class="card-title text-center") #{item["name"]}    
            img(src=`images/${item['image']}` class="card-images")
            p(class="text-center") #{item["cost"].toFixed(2).replace(/\d(?=(\d{3})+\.)/g,'$& ')} uah
        ul(class="card-action")
            li
                button(class="button button-primary add-to-cart" data-goods_id=item["id"]) to cart