include header

div(class="wrap")
    div(class="content")
        header(class="site-header")
            include site_header
        
        div(class="container")
            div(class="row")
                each val2 in category
                    div(class="col col-lg-12")
                        h2 
                            a(href=`/cat?id=${val2["id"]}`) #{val2["category"]}

                    each item in goods
                        if val2["id"] == item["category"]
                            include cart
        include nav
    include footer
